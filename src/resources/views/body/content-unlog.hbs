        }

        .content {
            box-shadow: 0 1px 8px 0 rgb(0 0 0 / 50%);
            -webkit-box-shadow: 0 1px 3px 0 rgb(0 0 0 / 30%);
            -moz-box-shadow: 0 0 1px 0 rgba(0, 0, 0, 0.1);
            height: 850px;
            width: 70%;
        }

        .content2{
             margin-left: 3%;
            height: 100%;
            box-shadow: 0 1px 8px 0 rgb(0 0 0 / 50%);
