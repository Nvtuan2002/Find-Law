        }

        .content2 .favorite span:first-child {
            background-color: var(--tittle-box);
            display: block;
            height: 2em;
            padding: 5px 0;
        }

        .content2-slide {
            width: 100%;
            display: flex;
            margin: 15px 15px;
        }

        .content2-slide>img {
            width: 85px;
            height: 75px;
            border-radius: 5px;
        }

        .content2-slide>span {
            width: 50%;
            margin-left: 5%;
            border-bottom: solid 1px #e6e6e6;
            font-weight: 500;
        }

        .content2 .more {
